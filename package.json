{
  "name": "progressive-img",
  "version": "1.0.0",
  "description": "Custom element (written in Polymer) to load img progressively and lazily. It first shows tiny blurred placeholder and loads full-sized image afterwards. It can also load image after click or entering viewport",
  "keywords": [
    "progressive",
    "lazy",
    "image",
    "img",
    "web component",
    "custom element",
    "polymer",
    "element",
    "html"
  ],
  "main": "progressive-img.js",
  "repository": "https://github.com/cuddlecheek/progressive-img.git",
  "author": "Marek Kadlčík",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@polymer/polymer": "^3.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@polymer/iron-demo-helpers": "^3.0.0-pre.19",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "babel-loader": "^8.0.6",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "wct-browser-legacy": "^1.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10"
  },
  "scripts": {
    "build-legacy": "webpack --mode=production",
    "build-modern": "MODERN=true webpack --mode=production",
    "build": "npm run build-modern && npm run build-legacy"
  }
}
